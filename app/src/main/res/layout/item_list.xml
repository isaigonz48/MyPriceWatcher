<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <TextView
        android:id="@+id/itemName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="@string/broom"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/removeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginStart="16dp"
        android:text="@string/Remove"
        app:layout_constraintBottom_toBottomOf="@+id/editButton"
        app:layout_constraintStart_toEndOf="@+id/editButton" />

    <Button
        android:id="@+id/editButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginStart="16dp"
        android:text="@string/Edit"
        app:layout_constraintBottom_toBottomOf="@+id/itemLink"
        app:layout_constraintStart_toEndOf="@+id/itemLink" />


    <TextView
        android:id="@+id/curPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginStart="16dp"
        android:text="Current Price: 20"
        app:layout_constraintBottom_toBottomOf="@+id/initPrice"
        app:layout_constraintStart_toEndOf="@+id/initPrice" />

    <TextView
        android:id="@+id/initPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="Initial Price: 30"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/itemName" />

    <TextView
        android:id="@+id/percentageOff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginStart="16dp"
        android:text="0.00 off!"
        app:layout_constraintBottom_toBottomOf="@+id/curPrice"
        app:layout_constraintStart_toEndOf="@+id/curPrice" />

    <Button
        android:id="@+id/itemLink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="8dp"
        android:text="@string/visit_website"
        app:layout_constraintTop_toBottomOf="@+id/initPrice"
        tools:layout_editor_absoluteX="9dp" />



</android.support.constraint.ConstraintLayout>